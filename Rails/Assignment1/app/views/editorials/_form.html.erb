<%= tinymce %>
<%= form_for(@editorial) do |f| %>
    <% if @editorial.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@editorial.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
            <% @editorial.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class='align'>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.number_field :date, :in=>(1960..2014) %>
      </div>
      <div class="field">
        <%= f.label :published %><br>
        <%= f.text_field :published %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content, :class => 'tinymce' %>
      </div>
      <div class="field">
        <%= f.label :image %><br>
        <%= f.text_field :image %>
      </div>
      <div class="actions"><%= link_to 'Email', spam_editorial_path(@editorial) %>
        <%= f.submit %>
      </div>
    </div>
<% end %>
